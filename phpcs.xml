<?xml version="1.0"?>
<ruleset name="PSR12">
    <description>The PSR12 coding standard.</description>
    <rule ref="PSR12">
        <exclude name="PSR12.Properties.ConstantVisibility" />
    </rule>
    <file>./</file>

